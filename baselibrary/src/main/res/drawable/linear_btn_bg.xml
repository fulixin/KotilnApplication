<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 圆角 -->
    <corners android:radius="@dimen/linear_bg_radius" /><!-- 设置圆角半径 -->

    <!-- 间隔 -->
    <padding
        android:bottom="@dimen/linear_bg_padding"
        android:left="@dimen/linear_bg_padding"
        android:right="@dimen/linear_bg_padding"
        android:top="@dimen/linear_bg_padding" /><!-- 各方向的间隔 -->

    <!-- 大小 -->
    <size
        android:width="50dp"
        android:height="@dimen/linear_bg_height" /><!-- 宽度和高度 -->

    <!-- 填充 -->
    <solid android:color="@color/White" /><!-- 填充的颜色 -->

    <!-- 描边 -->
    <stroke
        android:width="@dimen/linear_bg_stroke_width"
        android:color="@color/Gainsboro"/>
</shape>